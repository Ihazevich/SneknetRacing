<UserControl x:Class="SneknetRacing.Views.MotionDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SneknetRacing.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Suspension Position" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Suspension Velocity" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Suspension Acceleration" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Packet ID" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Session UID" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Session Time" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Frame Identifier" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Player Car Index" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Secondary Player Car Index" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Text="{Binding Path=Header.PacketFormat}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.GameMajorVersion}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.GameMinorVersion}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.PacketID}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.SessionUID}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.SessionTime}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.FrameIdentifier}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.PlayerCarIndex}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.SecondaryPlayerCarIndex}" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Grid.Column="3"></StackPanel>
        <StackPanel Grid.Column="4"></StackPanel>
        <StackPanel Grid.Column="6"></StackPanel>
        <StackPanel Grid.Column="7"></StackPanel>
    </Grid>
</UserControl>
