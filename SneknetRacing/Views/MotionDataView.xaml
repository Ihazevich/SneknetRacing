<UserControl x:Class="SneknetRacing.Views.MotionDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SneknetRacing.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Suspension Position" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Suspension Velocity" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Suspension Acceleration" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Wheel Speed" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Wheel Slip" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Local Velocity X" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Local Velocity Y" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Local Velocity Z" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Angular Velocity X" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Angular Velocity Y" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Angular Velocity Z" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Angular Acceleration X" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Angular Acceleration Y" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Angular Acceleration Z" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Front Wheel Angle" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding Path=Header.PacketFormat}" HorizontalAlignment="Left" Width="50"/>
                <TextBox Text="{Binding Path=Header.GameMajorVersion}" HorizontalAlignment="Left" Width="50"/>
                <TextBox Text="{Binding Path=Header.GameMinorVersion}" HorizontalAlignment="Left" Width="50"/>
                <TextBox Text="{Binding Path=Header.PacketID}" HorizontalAlignment="Left" Width="50"/>

            </StackPanel>
            <TextBox Text="{Binding Path=Header.SessionUID}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.SessionTime}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.FrameIdentifier}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.PlayerCarIndex}" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Path=Header.SecondaryPlayerCarIndex}" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Grid.Column="3"></StackPanel>
        <StackPanel Grid.Column="4"></StackPanel>
        <StackPanel Grid.Column="6"></StackPanel>
        <StackPanel Grid.Column="7"></StackPanel>
    </Grid>
</UserControl>
